    ConfigCommitTester(t)

def _test_commit_failure_automatic_rollback(t: testing.AsyncT):
    """Test automatic rollback on commit failure"""
    CommitFailureRollbackTester(t)

def _test_driver_state_transition_validation(t: testing.AsyncT):
    """Test state transition validation logic"""
    StateTransitionValidationTester(t)
